<% content_for :body_content_left do %>
  <%= render :partial => "refinery/portfolio/items/items", :locals => {:items => @items} %>
  <%= render :partial => "galleries", :locals => {:galleries => @galleries} %>
<% end %>

<%= render :partial => "/refinery/content_page" %>
<% content_for :stylesheets, stylesheet_link_tag('refinery/portfolio/frontend', 'skitter/skitter') %>
<% content_for :javascripts, javascript_include_tag('jquery', 'skitter/jquery.animate-colors-min', 'skitter/jquery.easing.1.3', 'skitter/jquery.skitter.js') %>
<% content_for :javascripts do %>
  <script type='text/javascript'>
    $(function() {
      $('.slideshow').skitter(<%= raw ::Refinery::Portfolio.skitter_options.to_json %>);
    });
  </script>
<% end %>


